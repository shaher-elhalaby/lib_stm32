{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with Markdown Watch",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/conan_output/build/lib_stm32",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "servertype": "external",
            "gdbTarget": "localhost:50000",
            "preLaunchTask": "Markdown Watcher Task",
            "gdbPath": "arm-none-eabi-gdb",
            "showDevDebugOutput": "raw"
        }
    ],
    "compounds": [
        {
            "name": "Full System Debug",
            "configurations": ["Debug with Markdown Watch"],
            "preLaunchTask": "Start OpenOCD"
        }
    ]
}
