    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug (External)",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/conan_output/build/lib_stm32",
            "request": "launch",
            "type": "cortex-debug",
